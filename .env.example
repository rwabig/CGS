# ========================
# Application Settings
# ========================
APP_NAME=CGS
APP_ENV=local
APP_URL=http://localhost/CGS
SESSION_TIMEOUT=1800   # In seconds (1800 = 30 minutes). Adjust as needed.

# ========================
# Database Settings
# ========================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=cgs
DB_USER=root
DB_PASS=

# ========================
# Security Settings
# ========================
# For production, set to a long, random string (e.g., from https://randomkeygen.com/)
APP_KEY=changeme1234567890securekey

# ========================
# Mail Settings (Optional)
# ========================
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@yourdomain.com
MAIL_PASSWORD=your-mail-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@yourdomain.com
MAIL_FROM_NAME="CGS Notification"

# ========================
# QR Code Settings
# ========================
QR_VERIFY_URL=${APP_URL}/public/verify.php?code=

# ========================
# Debugging
# ========================
DEBUG=true
